<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.shape.Circle?>

<StackPane xmlns:fx="http://javafx.com/fxml" fx:controller="org.example.brandedweatherwidget.HelloController"
           styleClass="root">
    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <VBox alignment="CENTER" spacing="20" styleClass="app-container" maxWidth="1000">

        <!-- Search Bar -->
        <HBox alignment="CENTER" spacing="10" styleClass="search-bar">
            <TextField fx:id="cityTextField" promptText="Enter City Name" styleClass="search-field" prefWidth="300"/>
            <Button fx:id="searchButton" text="ðŸ”" onAction="#onSearchButtonClick" styleClass="search-button"/>
        </HBox>

        <!-- Weather Card -->
        <HBox alignment="CENTER_LEFT" spacing="50" styleClass="weather-card">
            <VBox spacing="5">
                <Label fx:id="cityLabel" text="City Name" styleClass="city-heading"/>
                <Label fx:id="tempLabel" text="--Â°C" styleClass="temp-text"/>
                <Label fx:id="conditionLabel" text="Condition" styleClass="weather-condition"/>
                <Label fx:id="detailsLabel" text="Humidity: --%  Wind: -- m/s" styleClass="details-text"/>
            </VBox>

            <!-- Right Side Icon (Simplified representation) -->
            <StackPane alignment="TOP_LEFT">
                <Circle radius="35" styleClass="sun-shape"/>
                <Label text="â˜ï¸" style="-fx-font-size: 40px; -fx-padding: 10 0 0 30; -fx-text-fill: white;"/>
            </StackPane>
        </HBox>

        <!-- Forecast -->
        <HBox fx:id="forecastBox" alignment="CENTER" spacing="15" styleClass="forecast-box">
            <!-- Forecast items will be added dynamically -->
        </HBox>

    </VBox>
</StackPane>
